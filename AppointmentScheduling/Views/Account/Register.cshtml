@model AppointmentScheduling.Models.ViewModels.RegisterVM



<div class="row">
    <h4 class="text-center p-5">Create new account</h4>
    <div class="col-md-7">
        <form method="post" asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2"></label>
                <div class="col-md-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-3">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-3">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-6">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-3">
                <label asp-for="ConfirmPassward" class="col-md-2"></label>
                <div class="col-md-6">
                    <input asp-for="ConfirmPassward" class="form-control" />
                    <span asp-validation-for="ConfirmPassward" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-3">
                <label asp-for="RoleName" class="col-md-2"></label>
                <div class="col-md-6">
                    <select asp-for="RoleName" asp-items="@AppointmentScheduling.Utility.Helper.RolesDropDown()" class="form-control"></select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row pt-3">
                <div class="col-md-6 offset-md-2">
                    <input type="submit" value="Register" class="btn btn-success" />
                </div>
            </div>
            <p class="col-md-6 offset-md-2 pt-1">
                <a asp-action="Login">Sign In</a>
            </p>
        </form>

    </div>
    <div class="col-md-5">
        <img src="~/image/reg4.jpg" class="h-75"/>
    </div>
</div>

@section Scripts{
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
}